<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promedio de tráfico y conexiones en zonas digitales de Acacías"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona un mes"
        android:layout_below="@+id/title"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/meses"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@+id/text1"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una ubicación"
        android:layout_below="@+id/meses"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/ubicacion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@+id/text2"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promedio de tráfico y conexiones"
        android:layout_below="@+id/ubicacion"
        android:padding="8dp" />

    <TextView
        android:id="@+id/zona_postal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ubicacion"
        android:layout_toRightOf="@+id/text3"
        android:padding="8dp" />

    <!--<TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código en la zona"
        android:layout_below="@+id/text3"
        android:padding="8dp" />-->

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text3"/>


</RelativeLayout>